[core]
  excludesfile = ~/.gitignore
  editor = vim
[help]
  format = web
  browser = GC
  autocorrect = 1
[browser "GC"]
  cmd = open
[push]
  default = current
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  grep = auto
  ui = auto
  pager = 1
[color "decorate"]
  branch = 1
[difftool]
  tool = vimdiff
  prompt = false
[format]
  pretty = oneline
[alias]
  l = log --oneline --decorate=full
  s = status -s -b
  tl = log --pretty=format:'%Cred%h%Creset - %C(yellow)%an%Creset - %Cgreen%cr%Creset - %s%Creset' --abbrev-commit
  tree = log --pretty=format:'%Cred%h%Creset - %C(yellow)%an%Creset - %Cgreen%cr%Creset - %s%Creset' --abbrev-commit --graph
