[user]
  name = Kassio Borges
[core]
  excludesfile = ~/.gitignore
  editor = `which nvim`
  whitespace = trailing-space,space-before-tab,cr-at-eol
[push]
  default = current
[pull]
  rebase = true
[grep]
  extendRegexp = true
  lineNumber = true
[help]
  autocorrect = 1
[color]
  branch = true
  diff = auto
  interactive = auto
  status = auto
  grep = auto
  ui = auto
[credential]
  helper = /opt/boxen/bin/boxen-git-credential
[merge]
  ff = false
[alias]
  work = !git config --local --replace-all user.name 'Kassio Borges' && git config --local user.email "kassio.borges@plataformatec.com.br"
  home = !git config --local --replace-all user.name 'Kassio Borges' && git config --local user.email "kassioborgesm@gmail.com"
  b = branch
  bd = branch -d
  bD = branch -D
  c = commit -v
  ca = commit -v --amend
  co = checkout
  d = !git --no-pager diff --compaction-heuristic
  dp = diff --compaction-heuristic
  f = fetch
  fix = commit --amend --no-edit
  l = !git --no-pager lp -20
  lme = !GIT_USERNAME=$(git config user.name) && git --no-pager lp --author="\"$GIT_USERNAME\""
  lpme = !GIT_USERNAME=$(git config user.name) && git lp --author="\"$GIT_USERNAME\""
  lp = log --compaction-heuristic --pretty=format:'%Cred%h%Creset - %C(yellow)%an%Cgreen(%cd)%Creset %s%Creset -%Cblue%d%Creset' --date=short
  m = merge
  ma = merge --abort
  p = pull
  ps = push
  r = rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase -i
  rs = rebase --skip
  s = status -sb
  t = tag
  today = !git --no-pager l --stat --since=1.day --date=relative
  tree = !git lp --graph
  last-tag = describe --tags
  rank = shortlog -sn
[rerere]
  enabled = true
