if [[ $(uname) == 'Darwin' ]]
then
  alias upgrade='brew update && brew upgrade && brew cleanup -s --force && upgrade_oh_my_zsh'
  LS_COMMON="-G -h"
else
  LS_COMMON="--color=auto -th"
fi

export GREP_OPTIONS="--color=auto"

alias vi='vim'
alias nv='nvim'

alias vpu='vim +NeoBundleClean! +NeoBundleUpdate! +qall'
alias nvpu='vim +NeoBundleClean! +NeoBundleUpdate! +qall'

alias ls="ls $LS_COMMON"
alias l='ls -A'
alias ll='ls -l'
alias la='ls -lA'

alias ..='cd ..'
alias ...='cd ../..'

alias h='history'

alias r='rails'
alias RP='RAILS_ENV=production'
alias RT='RAILS_ENV=test'

alias vu='vagrant up'
alias vus='vu && vagrant ssh'
alias vh='vagrant halt'
alias vr='vagrant reload && vs'
alias vsu='vagrant suspend'

alias g="git"
alias ga="g add -A"
alias gb="g b"
alias gbdall="git remote | xargs -n1 git remote prune"
alias gc="g ci"
alias gclean="g clean"
alias gco="g co"
alias gd="g d"
alias gdc="gd --cached"
alias gdp="g dp"
alias gf="g f"
alias gg="g g"
alias gfix="gc --amend --no-edit --reset-author"
alias gl="g l"
alias glp="g lp"
alias gm="g m"
alias gp="g pull"
alias gps="g push"
alias gr="g rebase"
alias grc="gr --continue"
alias grs="gr --skip"
alias gra="gr --abort"
alias gs="g s"
alias gst="g stash"
alias gsub="git submodule"
alias gt="g tag"
alias gtoday="g today"
alias gtree="g tree"

function psg {
  ps aux | grep -i $@ | grep -v grep
}

function killer {
  kill -9 $(psg $@ | awk '{print $2}')
}

function tmux_notifier {
  if [[ $(uname) == 'Darwin' ]]
  then
    `which terminal-notifier` -group 'TMUX' -message $1 &>/dev/null
  else
    `which notify-send` $1 &>/dev/null
  fi
}

function __tmux_notify_status {
  local last_status=$?
  local last_command="$(fc -ln -1)"
  case $last_command in
    ruby*|rake*|rspec*)
      if [ $last_status -eq 0 ]
      then
        tmux_notifier 'SUCCESS :)'
      else
        tmux_notifier 'FAILED :('
      fi
      ;;
  esac
}

