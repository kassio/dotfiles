alias vi="vim"

if [[ $(uname) == 'Darwin' ]]
then
  alias upgrade='brew update && brew upgrade'
  LS_COMMON="-G -th"
else
  LS_COMMON="--color=auto -th"
fi

alias ls="ls $LS_COMMON"
alias l='ls -A'
alias ll='ls -l'
alias la='ls -lA'

alias ..='cd ..'

export GREP_OPTIONS="--color=auto"

function psg {
  ps aux | grep -i $@ | grep -v grep
}

function killer {
  sudo kill -9 $(psg $@ | awk '{print $2}')
}

alias h='history'

alias r='rails'
alias RP='RAILS_ENV=production'
alias RT='RAILS_ENV=test'

alias vu='vagrant up'
alias vh='vagrant halt'
alias vr='vagrant reload'
alias vs='DISPLAY=:1 vagrant ssh'
alias vus='vu && vs'

alias g="git"
alias ga="g add"
alias gb="g b"
alias gc="g ci"
alias gcl="g clean"
alias gco="g co"
alias gd="g d"
alias gdp="g dp"
alias gl="g l"
alias glp="g lp"
alias gm="g m"
alias gp="g pull"
alias gps="g push"
alias gs="g s"
alias gsub="git submodule"
alias gt="g tag"
alias gtoday="g today"
alias gtree="g tree"

function loop_this {
  local params=($(echo "$@"))
  local count=${params[0]}
  local command=${params[@]:1}

  for ((i = 0; i < $count; ))
  do
    echo ">> Build $((++i))"
    echo ">> $command"
    $command
    [[ $? != 0 ]] && break
    echo ""
  done
}

alias pg_start='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias pg_stop='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log stop'

alias retag='ctags --tag-relative -R --exclude=.git --languages=-javascript,sql'

alias reload='source ~/.zshrc'

