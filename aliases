alias vi="vim"

if [[ $(uname) == 'Darwin' ]]
then
  alias upgrade='brew update && brew upgrade && brew cleanup -s --force'
  LS_COMMON="-G -h"
else
  LS_COMMON="--color=auto -th"
fi

alias vpu='vim +NeoBundleClean! +NeoBundleUpdate! +qall'

alias ls="ls $LS_COMMON"
alias l='ls -A'
alias ll='ls -l'
alias la='ls -lA'

export GREP_OPTIONS="--color=auto"

alias ..='cd ..'
alias ...='cd ../..'

function psg {
  ps aux | grep -i $@ | grep -v grep
}

function killer {
  kill -9 $(psg $@ | awk '{print $2}')
}

alias h='history'

alias r='rails'
alias RP='RAILS_ENV=production'
alias RT='RAILS_ENV=test'

alias vu='vagrant up'
alias vus='vu && DISPLAY=:1 vagrant ssh'
alias vh='vagrant halt'
alias vr='vagrant reload && vs'
alias vsu='vagrant suspend'

alias g="git"
alias ga="g add"
alias gb="g b"
alias gbdall="git remote | xargs -n1 git remote prune"
alias gc="g ci"
alias gclean="g clean"
alias gco="g co"
alias gd="g d"
alias gdc="gd --cached"
alias gdp="g dp"
alias gf="g f"
alias gg="g g"
alias gfix="gc --amend --no-edit --reset-author"
alias gl="g l"
alias glp="g lp"
alias gm="g m"
alias gp="g pull"
alias gps="g push"
alias gr="g rebase"
alias gs="g s"
alias gst="g stash"
alias gsub="git submodule"
alias gt="g tag"
alias gtoday="g today"
alias gtree="g tree"

function loop_this {
  local params=($(echo "$@"))
  local count=${params[0]}
  local command=${params[@]:1}

  for ((i = 0; i < $count; ))
  do
    echo ">> Build $((++i))"
    echo ">> $command"
    $command
    [[ $? != 0 ]] && break
    echo ""
  done
}

