{
  "title": "Vi Mode, fn + hjkl for left/down/up/right",
  "rules": [
    {
      "description": "Vi Mode, fn + hjkl for left/down/up/right",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["command", "control", "option", "shift"]
            }
          },
          "to": [{ "key_code": "left_arrow" }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["command", "control", "option", "shift"]
            }
          },
          "to": [{ "key_code": "down_arrow" }]
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["command", "control", "option", "shift"]
            }
          },
          "to": [{ "key_code": "up_arrow" }],
          "type": "basic"
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["command", "control", "option", "shift"]
            }
          },
          "to": [{ "key_code": "right_arrow" }]
        }
      ]
    }
  ]
}
