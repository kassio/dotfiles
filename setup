#!/bin/bash

cd $HOME

link_files() {
  local file_path="$HOME/.dotfiles"

  for f in bashrc zshrc gitignore gitconfig irbrc gemrc profile tmux.conf ctags
  do
    ln -sf "$file_path/$f" $HOME/.$f
  done
}; link_files

if [[ ! -e $HOME/.main_user ]]
then
  echo `whoami` > $HOME/.main_user
fi

if [[ -e $HOME/.zshrc ]]
then
  source $HOME/.zshrc >/dev/null 2>&1
fi

cd $HOME
