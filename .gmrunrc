# Set terminal
Terminal = terminator
TermExec = ${Terminal} -e
browser = firefox
file = nautilus
AlwaysInTerm = ssh telnet ftp lynx mc vi vim pine centericq perldoc man

# Set window geometry (except height)
Width = 300
Top = 250
Left = 380

# History size
History = 2048

# Shows last history line selected when invoked
ShowLast = 1

# Show files starting with '.'
# Default is 0 (off), set it to 1 if you want "hidden" files to show up
# in the completion window
ShowDotFiles = 0

# Timeout (in milliseconds) after which gmrun will simulate a TAB press
# Set this to NULL if don't like this feature.
TabTimeout = 0

# URL handlers
# If the entered text is "http://www.google.com" then:
#   - %u gets replaced with the whole URL ("http://www.google.com")
#   - %s gets replaced with "//www.google.com".  This is useful for URL-s
#     like "man:printf" --> %s will get replaced with "printf"
URL_ff = ${browser} '%s'
URL_http = ${browser} '%u'
URL_https = ${browser} '%u'
URL_g = ${browser} 'google.com.br/search?q=%s'
URL_t = ${browser} 'http://translate.google.com/#en|pt|%s'
URL_sh = ${TermExec} '%s'
URL_su = ${TermExec} 'su -c "%s"'
URL_apt = ${TermExec} 'su -c "aptitude update && aptitude safe-upgrade"'
URL_f = ${file} %s
URL_man = ${TermExec} 'man %s'
URL_info = ${TermExec} 'info %s'
URL_readme = ${TermExec} 'most /usr/doc/%s/README'

# Atalhos de locais
DOCS = /home/kassio/Documentos/
URL_docs = ${file} '${DOCS}%s'

# Atalhos para UFG
UFG = /home/kassio/UFG/
URL_update = ${TermExec} 'svn update ${UFG}%s'
URL_commit = ${TermExec} 'svn commit ${UFG}%s'

# extension handlers
EXT:doc,rtf,odt,ods,odp = soffice %s
EXT:txt,cc,cpp,h,java,html,htm,epl,tex,latex,js,css,xml,xsl,am,rb,erb,c,php = vim %s
EXT:ps,pdf = evince %s
