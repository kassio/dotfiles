# vim:ft=zsh:

alias v="vim"
alias n="nvim"

alias time="/usr/bin/time"

alias sudo="sudo "

alias ls="ls -G -h"
alias la="ls -lA"

alias watch="watch --color"

alias ..="cd .."
alias ...="cd ../.."

alias brews="brew services"

# Searching
alias grep="grep -v 'grep --color=auto -i' | grep --color=auto -i"
alias psg="ps aux | grep"

# Ruby and Rails
alias r="rails"
alias sr="bin/spring rails"
alias be="bundle exec"
alias RD="RAILS_ENV=development"
alias RT="RAILS_ENV=test"
alias RS="RAILS_ENV=staging"
alias RP="RAILS_ENV=production"
alias DS="DISABLE_SPRING=1"

alias c="code"

alias tailf="tail -f"

alias to-nvim="xargs nvim -p"

alias rubocop-diff="gdfm --diff-filter=d | grep '.rb' | xargs bundle exec rubocop --parallel"
alias rspec-diff="gdfm --diff-filter=d | grep '_spec.rb' | xargs bundle exec rspec"
alias nvim-diff="gdfm --diff-filter=d | to-nvim"

alias reset-logs='for f in log/*; do [ "$f" != "log/.gitkeep" ] && echo > $f; done'

source "${DOTFILES}/lib/git/alias"
