# vim:ft=zsh:

alias v="vim"
alias n="nvim"

alias sudo="sudo "

alias ls="ls -G -h"
alias la="ls -lA"

alias watch="watch --color"

alias ..="cd .."
alias ...="cd ../.."

alias brews="brew services"

# Searching
alias grep="grep -v 'grep --color=auto -i' | grep --color=auto -i"
alias psg="ps aux | grep"

# Ruby and Rails
alias r="rails"
alias RD="RAILS_ENV=development"
alias RT="RAILS_ENV=test"
alias RS="RAILS_ENV=staging"
alias RP="RAILS_ENV=production"
alias DS="DISABLE_SPRING=1"
alias be="bundle exec"

# Git
alias NGP="GIT_PAGER=cat"
alias g="git"
alias ga="g add -A"
alias gb="g branch"
alias gbd="gb -d"
alias gc="g commit --verbose"
alias gca="gc --amend"
alias gclean="g clean"
alias gcp="g cherry-pick"
alias gcpa="gcp --abort"
alias gcpc="gcp --continue"
alias gd="g diff"
alias gdc="gd --cached"
alias gf="g fetch --prune --prune-tags --tags --recurse-submodules=on-demand"
alias gfix="gca --no-edit"
alias gl="g log --pretty=log -20"
alias gla="gl --pretty=log"
alias glme="gl --author=\"Kassio Borges\""
alias gm="g merge"
alias gma="gm --abort"
alias gp="g pull"
alias gps="g push"
alias gr="g rebase"
alias gra="gr --abort"
alias grc="gr --continue"
alias gri="gr --interactive"
alias grs="gr --skip"
alias grt="g restore"
alias gs="g status -sb"
alias gsw="g switch"
alias gt="g tag-list --sort='creatordate'"
