#!/usr/bin/env bash

# Vim <3
alias v="vim"

# System
alias ls="ls -G -h"
alias l="ls -l"
alias la="ls -lA"

alias watch="watch --color"

alias ..="cd .."
alias ...="cd ../.."

alias brews="brew services"

# Searching
alias grep="grep --color=auto -i"

alias nowrap='cut -c -$COLUMNS'

# Process
alias ctop="htop -s PERCENT_CPU"
alias mtop="htop -s PERCENT_MEM"

# Ruby and Rails
alias r="rails"
alias RD="RAILS_ENV=development"
alias RT="RAILS_ENV=test"
alias RS="RAILS_ENV=staging"
alias RP="RAILS_ENV=production"

alias DS="DISABLE_SPRING=1"

alias be="bundle exec"

# Elixir/Mix
alias MT="MIX_ENV=test"
alias iexm="iex -S mix"

alias dsf="diff-so-fancy"

# Git
alias g="git"
alias ga="g add -A"
alias gb="g b"
alias gbc="g bc"
alias gbd="gb -d"
alias gbD="gb -D"
alias gbfD="g bfd"
alias gbr="gb -r"
alias gbrd="gb -rd"
alias gbrD="gb -rD"
alias gc="g c"
alias gca="g ca"
alias gclean="g clean"
alias gco="g co"
alias gcom="gco master"
alias gcp="g cp"
alias gcpa="gcp --abort"
alias gcpc="gcp --continue"
alias gd="g d"
alias gdc="gd --cached"
alias gdp="g dp"
alias gdt="g dt"
alias gf="g f --prune --prune-tags --tags --recurse-submodules=on-demand"
alias gfix="g fix"
alias gfp="gf; gp"
alias gl="g l"
alias glp="g lp"
alias glme="g lme"
alias glpme="g lpme"
alias gm="g m"
alias gma="g m --abort"
alias gmt="g mt"
alias gp="g pull"
alias gps="g push"
alias gr="g r"
alias gra="g r --abort"
alias grc="g r --continue"
alias gri="g r -i"
alias grs="g r --skip"
alias grf="g rf"
alias gs="g s"
alias gt="g t"
alias gtl="g tl"
alias gtla="g tla"
alias update-master="gco master; gf; gp; gco -"

alias j="jekyll"

alias c="code"

alias onvim="xargs nvim -p"

alias lzd="lazydocker"
alias fr="forego run"
