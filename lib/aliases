#!/usr/bin/env bash

alias n='NVIM_LISTEN_ADDRESS=/tmp/nvimsocket nvim'

LS_COMMON="-G -h"
alias ls="ls $LS_COMMON"
alias ll='ls -l'
alias la='ls -lA'

alias ..='cd ..'
alias ...='cd ../..'

alias sudo='A=`alias` sudo env '

alias r='rails'
alias RD='RAILS_ENV=development'
alias RT='RAILS_ENV=test'
alias RS='RAILS_ENV=staging'
alias RP='RAILS_ENV=production'

alias DS='DISABLE_SPRING=1'

alias be='bundle exec'

alias iexm='iex -S mix'

alias g="git"
alias ga="g add -A"
alias gb="g b"
alias gbd="g bd"
alias gbD="g bD"
alias gc="g c"
alias gca="g ca"
alias gclean="g clean"
alias gco="g co"
alias gd="g d"
alias gdc="gd --cached"
alias gdp="g dp"
alias gf="g f -p"
alias gfix="g fix"
alias gl="g l"
alias glp="g lp"
alias glme="g lme"
alias glpme="g lpme"
alias gm="g m"
alias gma="g ma"
alias gp="g pull"
alias gps="g push"
alias gr="g r"
alias gra="g ra"
alias grc="g rc"
alias gri="g ri"
alias grs="g rs"
alias greset="g reset"
alias gs="g s"
alias gstash="g stash"
alias gt="g tag"
alias gtl="gt --list --sort=version:refname"
alias gtoday="g today"
alias gtree="g tree"

export GREP_OPTIONS="--color=auto"
alias grep="grep -v grep | \\grep -i"

alias psg="ps aux | grep "

# Kills all the process with the given name.
function killer {
  kill -9 $(psg $@ | awk '{print $2}')
}
