#!/usr/bin/env zsh

target="${HOME}/src/nvim-nightly"
mkdir -p "${target}"
pushd "${target}"

curl \
  --location \
  --progress-bar \
  --output "nvim-macos.tar.gz" \
  "https://github.com/neovim/neovim/releases/download/nightly/nvim-macos.tar.gz"

xattr -c "nvim-macos.tar.gz"
tar xzf "nvim-macos.tar.gz"
ln -sf "${target}/nvim-macos/bin/nvim" "${HOMEBREW_PREFIX}/bin/nvim"
nvim -V1 -v

popd
