# vim:ft=zsh:

export GOPATH="${HOME}/src/go"

# easier access to go binaries
export PATH="${PATH}:${GOPATH}/bin"

# easier navigation to go projects
export CDPATH="${CDPATH}:${GOPATH}/src"

# Shorter test output
export GOTESTSUM_FORMAT="dots"

# Default GO packages
export ASDF_GOLANG_DEFAULT_PACKAGES_FILE="${HOME}/.config/go/default-packages"

# Allow asdf go to read go.mod/go.work
export ASDF_GOLANG_MOD_VERSION_ENABLED=true
