#!/usr/bin/env zsh

local branch="$(git symbolic-ref --short HEAD 2>/dev/null)"

if [ $# -ne 0 ]; then
  branch="$1"
fi

local branch_remote="$(git config --get "branch.${branch}.remote")"
local remote_url="$(git remote get-url "${branch_remote}" | sed 's/\.git//')"

case "${remote_url}" in
  *gitlab*)
    open "${remote_url}/-/tree/${branch}"
    ;;

  *github*)
    open "${remote_url}/tree/${branch}"
    ;;
esac
