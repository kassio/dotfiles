__build_prompt() {
  local tmux_info="${TMUX_PANE:+$FG[196][${TMUX_PANE#\%}]}";
  local current_dir="$FG[027]%~"

  __git_ps1 "${tmux_info}${current_dir}%{$reset_color%}" "%s
$FG[046]$ "
}

__build_rprompt() {
  local return_code="%(?..$FG[160]%? â†µ)%{$reset_color%}";
  export RPS1="${return_code}"
}; __build_rprompt

