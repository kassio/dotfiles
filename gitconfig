[user]
  name = Kassio Borges
  email = kassioborgesm@gmail.com
[core]
  excludesfile = ~/.gitignore
  editor = `which vim`
  whitespace = trailing-space,space-before-tab,indent-with-non-tab,cr-at-eol
[help]
  autocorrect = 1
[push]
  default = current
[color]
  branch = true
  diff = auto
  interactive = auto
  status = auto
  grep = auto
  ui = auto
[alias]
  autoseg = config user.email \"kassio.borges@autoseg.com\"
  personal = config user.email \"kassioborgesm@gmail.com\"
  b = branch
  ci = commit -v
  cl = clean
  co = checkout
  d = !git --no-pager diff
  dp = diff
  l = !git --no-pager log -20 --pretty=format:'%Cred%h%Creset - %C(yellow)%an%Cgreen(%cr)%Creset %s%Creset -%Cblue%d%Creset'
  lp = log --pretty=format:'%Cred%h%Creset - %C(yellow)%an%Cgreen(%cr)%Creset %s%Creset -%Cblue%d%Creset'
  m = merge
  s = status -sb
  st = status
  t = tag
  today = log --stat --since=1.day --graph --pretty=oneline --abbrev-commit --date=relative
  tree = log --pretty=format:'%Cred%h%Creset - %C(yellow)%an%Cgreen(%cr)%Creset - %s%Creset' --graph
[init]
  templatedir = ~/.dotfiles/git_template

