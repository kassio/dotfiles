[user]
  name = Kassio Borges
[core]
  excludesfile = ~/.gitignore
  editor = `which vim`
  whitespace = trailing-space,space-before-tab,cr-at-eol
[init]
  templatedir = ~/.dotfiles/git_template
[push]
  default = current
[pull]
  rebase = true
[grep]
  extendRegexp = true
  lineNumber = true
[help]
  autocorrect = 1
[color]
  branch = true
  diff = auto
  interactive = auto
  status = auto
  grep = auto
  ui = auto
[credential]
  helper = /opt/boxen/bin/boxen-git-credential
[merge]
  ff = false
[alias]
  work = !git config --local --replace-all user.name 'Kassio Borges' && git config --local user.email "kassio.borges@plataformatec.com.br"
  home = !git config --local --replace-all user.name 'Kassio Borges' && git config --local user.email "kassioborgesm@gmail.com"
  b = branch
  ci = commit -v
  cl = clean
  co = checkout
  d = !git --no-pager diff
  dp = diff
  f = fetch
  g = grep --break --heading
  l = !git --no-pager log -20 --pretty=format:'%Cred%h%Creset - %C(yellow)%an%Cgreen(%cr)%Creset %s%Creset -%Cblue%d%Creset'
  lp = log --pretty=format:'%Cred%h%Creset - %C(yellow)%an%Cgreen(%cd)%Creset %s%Creset -%Cblue%d%Creset' --date=short
  m = merge
  s = status -sb
  st = status
  t = tag
  today = log --stat --since=1.day --graph --pretty=oneline --abbrev-commit --date=relative
  tree = log --pretty=format:'%Cred%h%Creset - %C(yellow)%an%Cgreen(%cr)%Creset - %s%Creset' --graph
  shorten = !sh -c 'curl -i http://git.io -F url=https://github.com/$1 -F code=$2' -
  last-tag = describe --tags
  rank = shortlog -sn
