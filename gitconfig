[user]
  name = Kassio Borges
  email = kassioborgesm@gmail.com
[core]
  excludesfile = ~/.gitignore
  editor = `which vim`
  whitespace = trailing-space,space-before-tab,indent-with-non-tab,cr-at-eol
[help]
  autocorrect = 1
[push]
  default = current
[color]
  branch = true
  diff = true
  interactive = true
  status = true
  grep = true
  ui = true
  pager = true
[color "decorate"]
  branch = true
[color "diff"]
  whitespace = red reverse
  meta = yellow bold
  frag = magenta bold
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[pager]
  diff = false
[alias]
  b = branch
  ci = commit
  co = checkout
  st = status
  s = status -sb
  l = log --oneline --decorate=full
  today = log --stat --since=1.day --graph --pretty=oneline --abbrev-commit --date=relative
  tl = log --pretty=format:'%Cred%h%Creset - %C(yellow)%an%Cgreen(%cr)%Creset %s%Creset - %Cblue%d%Creset'
  tree = log --pretty=format:'%Cred%h%Creset - %C(yellow)%an%Cgreen(%cr)%Creset - %s%Creset' --graph
