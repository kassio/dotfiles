{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "$": true
  },
  "rules": {
    "quotes": [2, "single"],
    "comma-dangle": [2, "only-multiline"],
    "indent": [2, 2, {
      "VariableDeclarator": 2,
      "SwitchCase": 1
    }],
    "camelcase": 2,
    "no-multi-spaces": 0,
    "no-shadow": 2,
    "no-eq-null": 2,
    "no-extra-parens": 2,
    "no-lonely-if": 2,
    "no-nested-ternary": 2,
    "no-param-reassign": 2,
    "no-self-compare": 2,
    "no-throw-literal": 2,
    "no-void": 2,
    "no-undef": 2,
    "no-extra-semi": 2,
    "no-underscore-dangle": 0,
    "eqeqeq": 2,
    "comma-style": [2, "last"],
    "no-debugger": "error",
    "no-console": "warn",
    "semi": ["error", "always"]
  },
  "plugins": [
    "react"
  ]
}
