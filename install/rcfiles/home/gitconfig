[user]
  name = Kassio Borges
  email = kassioborgesm@gmail.com
[includeIf "gitdir:~/Code/zendesk/"]
  path = ~/Code/zendesk/.gitconfig
[credential]
  helper = osxkeychain
[core]
  excludesfile = ~/.gitignore
  editor = `which $EDITOR`
  whitespace = trailing-space,space-before-tab,cr-at-eol
  ignorecase = false
[push]
  default = current
[pull]
  rebase = true
[grep]
  extendRegexp = true
  lineNumber = true
[help]
  autocorrect = 1
[color]
  branch = true
  diff = auto
  interactive = auto
  status = auto
  grep = auto
  ui = auto
[color "diff"]
  old = red dim
  new = green bold
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[merge]
  ff = false
  conflictstyle = diff3
  tool = vimdiff
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[log]
  date = format-local:"%F %R"
[pretty]
  log = %C(red dim)%h %C(green)%cd %C(yellow)%an %C(reset)%C(white)%s %C(blue)%d
[alias]
  b = !git --no-pager branch
  bp = branch
  bc = b --all --contains
  bfd = "!f() { git branch -D $1 && git push origin :$1; }; f"
  c = commit -v
  ca = commit -v --amend
  co = checkout
  cp = cherry-pick
  d = !git --no-pager diff
  dp = diff
  dt = difftool
  f = fetch
  fix = commit --amend --no-edit
  l = !git --no-pager lp -20
  last-tag = !git describe --tags $(git rev-list --tags --max-count=1)
  lme = !git l --author="\"$(git config user.name)\""
  lp = !git log --pretty=log
  lpme = !git lp --author="\"$(git config user.name)\""
  m = merge
  mt = mergetool
  p = pull
  ps = push
  r = rebase
  s = status -sb
  t = !git --no-pager tag
  tag-sync = !git fetch --prune origin "+refs/tags/*:refs/tags/*"
  tla = !git tag --list --sort='-authordate' --format '%(color:blue)%(align:10,right)%(refname:lstrip=2)%(end) %(color:red dim)%(objectname:short) %(color:green dim)%(authordate:format-local:%F %R) %(color:yellow dim)%(authorname)'
  tl = "!f() { git --no-pager tla | head -n ${1:-30}; };f"
  today = !git --no-pager l --since=today.midnight
  tree = !git lp --graph
  show-last-tag = !git show $(git last-tag)
  rank = shortlog -sn
  rf = reflog --pretty=log
  rfme = !git rf --author="\"$(git config user.name)\""
[tag]
  sort = creatordate
[rerere]
  enabled = true
