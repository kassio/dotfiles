# only search with case sensitivity if there is mixed case
--smart-case

# follow symlinks
--follow

--type-set=DUMP=.sql
--noDUMP

# search other filetypes
--type-add
ruby=haml,rabl,builder

--type-add
js=json,tmpl,jst

--type-add
css=sass,scss

# ignore some dirs
--ignore-dir=.bundle
--ignore-dir=vendor/bundle
--ignore-dir=tmp
--ignore-dir=dumps
--ignore-dir=spec/acceptance/cliente/support/dump.sql
