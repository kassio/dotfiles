[user]
  name = Kassio Borges
  email = kassioborgesm@gmail.com
[init]
  defaultBranch = main
[commit]
  gpgsign = true
[credential]
  helper = osxkeychain
[remote "origin"]
  prune = true
[core]
  excludesfile = ~/.dotfiles/lib/gitignore
  attributesfile = ~/.dotfiles/lib/gitattributes
  editor = `which $EDITOR`
  whitespace = blank-at-eol,blank-at-eof,trailing-space,space-before-tab,cr-at-eol,tabwidth=2
  ignorecase = false
  pager = less --tabs=2 -RFX
[apply]
  whitespace = fix
[push]
  default = current
[pull]
  rebase = true
[rebase]
  autosquash = true
[tag]
  sort = creatordate
[grep]
  extendRegexp = true
  lineNumber = true
[help]
  autocorrect = 1
[color "diff"]
  frag = cyan dim
  meta = cyan dim
  old = red
  new = green bold
  whitespace = blue reverse
[rerere]
  enabled = true
  autoupdate = true
[diff]
  tool = vimdiff
  noprefix = true
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[merge]
  ff = false
  conflictstyle = diff3
  tool = vimdiff
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[log]
  date = format-local:"%F %R"
[pretty]
  log = %C(red dim)%h %C(green)%cd %C(yellow)%an %C(reset)%C(normal)%s %C(blue)%d
[alias]
  tag-list = !git tag --list --format='%(color:green dim)%(creatordate:format-local:%F %R) %(color:red dim)%(objectname:short) %(color:blue)%(align:10,left)%(refname:lstrip=2)%(end)'
  tag-sync = !git fetch --prune origin "+refs/tags/*:refs/tags/*"
  today = !git --no-pager l --since=today.midnight
  main-branch = !git rev-parse --quiet --verify origin/main > /dev/null && echo "main" || echo "master"
[gpg]
  program = /usr/local/bin/gpg
[advice]
  detachedHead = false
[include]
  path = ~/.dotfiles.private/gitconfig
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
