#!/usr/bin/env bash

if [ $# -lt 3 ]; then
  echo 'USAGE: replace <search pattern> <new pattern> <files>[ <files> ...]'
  exit 0
fi

find_this="$1"
shift
replace_with="$1"
shift
echo "Replacing '${find_this}' by '${replace_with}' in '$*'"

ag -l --nocolor "${find_this}" "$@" |
  xargs -I files \
    sed -i "" -e "s/${find_this}/${replace_with}/g" files
