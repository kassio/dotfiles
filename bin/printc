#!/usr/bin/env bash

function show_help() {
  echo -e "usage: printc [-c|--color|-h|--help] message
  OPTIONS:
  -h, --help       print this message
  -c, --color      choose the color of the message
  -b, --bold       make the text bold
  -u, --underline  underlines the text
  -r, --raw        do not evaluate the formatting codes
  Available colors:
  "

  for i in {1..256}; do
    printf "\e[38;5;%dm%03d " ${i} ${i}
    [ "$((i % 16))" = 0 ] && echo
  done

  echo
}

reset='\e[00m'
color=""
underline=""
bold=""
message=""
raw=""

function parse_args() {
  if [ $# -eq 0 ]; then
    show_help
    exit 0
  else
    case $1 in
      -h | --help)
        show_help
        exit 0
        ;;
      -c | --color)
        color="\e[38;5;$2m"
        shift 2

        parse_args "$@"
        ;;
      -u | --underline)
        underline='\e[4m'
        shift

        parse_args "$@"
        ;;
      -b | --bold)
        bold='\e[1m'
        shift

        parse_args "$@"
        ;;
      -r | --raw)
        raw="true"
        shift

        parse_args "$@"
        ;;
      *)
        message="$*"
        ;;
    esac
  fi
}

function printc() {
  parse_args "$@"

  msg="${bold}${underline}${color}${message}${reset}"

  if [ "${raw}" = "true" ]; then
    echo -n "${msg}"
  else
    echo -ne "${msg}"
  fi
}

printc "$@"
