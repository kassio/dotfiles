#!/usr/bin/env bash

URL="$1"
PATH="${PATH}:/usr/local/bin"
BASE_DIRECTORY="${HOME}/Movies"
FILE_NAME="%(title)s.%(id)s.%(ext)s"

case "${URL}" in
  *list*)
    youtube-dl -o "${BASE_DIRECTORY}/%(playlist_title)s/${FILE_NAME}" "${URL}"
    ;;
  *)
    youtube-dl -o "${BASE_DIRECTORY}/${FILE_NAME}" "${URL}"
    ;;
esac
