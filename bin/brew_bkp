#!/bin/bash

brewfile="$HOME/.dotfiles/Brewfile"

mv $brewfile "/tmp/Brewfile.$$.bkp"

touch $brewfile
echo -e "### Taps" >> $brewfile
brew tap | while read t
do
  echo "tap $t" >> $brewfile
done

echo -e "\n### Apps" >> $brewfile
brew leaves | while read app
do
  version=$(brew list --versions $app | cut -f2 -d' ')
  options=$(cat /usr/local/Cellar/$app/$version/INSTALL_RECEIPT.json 2>/dev/null | egrep -Eo '"used_options":\[[^]]*\],' | sed 's/.*\[\(.*\)\],/\1/p')
  head=$([[ "$version" == "HEAD" ]] && echo "--HEAD" || echo "")
  cmd="install $app $options $head"

  echo ${cmd%%' '} >> $brewfile
done

echo -e "\n### Verify" >> $brewfile
echo "doctor" >> $brewfile
