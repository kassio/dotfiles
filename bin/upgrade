#!/usr/bin/env bash

components_path="${HOME}/.dotfiles/bin/upgrade_components"
timestamp_file="${HOME}/.config/.last-upgrade"

case "$1" in
  --help|-h)
    echo -e "USAGE: upgrade [options]
    Upgrade your system components

  Options:
    --[component]
      Will upgrade only the given component

    --no-[component]
      Will skip the component and upgrade all the others.
      This option may be used more than once.

  Components:"
    for component in $(ls -1 "${components_path}/")
    do
      echo -e "\t\t$(${components_path}/${component} --help)"
    done
    exit 0
    ;;
esac

title() {
  local blue='\e[0;36m'
  local yellow='\e[0;93m'
  local reset='\e[00m'
  local bullet="${yellow}â–¸ "

  printf "${bullet}${blue}$*${reset}\n"
}
export -f title

_exit() {
  unset -f title
  echo "$(date -j '+%d %b %Y %H:%M')" > "${timestamp_file}"
  exit "$1"
}

_last_upgrade() {
  if [ -f "${timestamp_file}" ]
  then
    title "Last upgrade was on $(cat ${timestamp_file}).\n"
  fi
}

_upgrade() {
  trap '_exit -1' HUP INT QUIT TERM

  _last_upgrade

  local only_param="${1#--}"
  if [ -n "${only_param}" ]
  then
    local only=$(find ${components_path} -name "*${only_param}")
    if [ -n "${only}" ]
    then
      "${only}"
      _exit 0
    fi
  fi

  for component in $(ls -1 "${components_path}/")
  do
    name=$(echo ${component} | sed -E "s/[[:digit:]]+_//")

    case "$*" in
      *"--no-${name}"*)
        continue
        ;;
      *)
        "${components_path}/${component}"
        ;;
    esac
  done

  _exit 0
}


_upgrade $@

echo

_exit 0
