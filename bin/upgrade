#!/usr/bin/env bash

title() {
  local blue='\e[0;36m'
  local yellow='\e[0;93m'
  local reset='\e[00m'
  local bullet="${yellow}â–¸ "

  printf "${bullet}${blue}$*${reset}\n"
}

print-help() {
  echo -e "usage: upgrade [-g|--git] [--no-git] [-h|--help]
  Upgrade your system
  Options:
  -a, --apple      Update apple softwareupdate;
  -A, --no-apple   Do not update apple softwareupdate;
  -g, --git        Update your git repositories in the \$REPOS, default;
  -G -no--git      Do not update your git repositories;
  -v, --verbose    Show what's going on;
  -q, --quiet      Do not show what's going on;
  -h, --help       Show this help message;
"
}

apple=true
git=true
verbose=true

for option in $@
do
  case $option in
    -a|--apple)
      apple=true
      ;;
    -A|--no-apple)
      apple=false
      ;;
    -G|--no-git)
      git=false
      ;;
    -g|--git)
      git=true
      ;;
    -q|--quiet)
      verbose=false
      ;;
    -v|--verbose)
      verbose=true
      ;;
    -h|--help)
      print-help
      exit 0
      ;;
  esac
done

if [ "$verbose" != true ]
then
  exec &>/dev/null
fi

if [ "$git" = true ]
then
  title "updating repositories"
  update-repos
fi

if [ "$apple" = true ]
then
  title "Apple upgrade"
  softwareupdate -ia
fi

title "brew upgrade"
brew update
brew upgrade --fetch-HEAD
brew cleanup

title "atom packages upgrade"
apm ls --installed --enabled --bare | sed 's/@.*//' > ${HOME}/.dotfiles/install/atom-packages
yes | apm upgrade

title "neovim/vim packages upgrade"
${HOME}/.config/nvim/bin/pack

echo
