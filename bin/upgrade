#!/usr/bin/env bash

puts() {
  local color='\e[0;36m'
  local reset='\e[00m'
  printf "${color}$*${reset}\n"
}

puts ">> updating repositories"
update-repos

puts "\n>> Apple upgrade"
softwareupdate -ia

puts "\n>> brew upgrade"
brew update
brew upgrade --fetch-HEAD
brew cleanup

puts "\n>> atom packages upgrade"
apm ls --installed --enabled --bare | sed 's/@.*//' > ${HOME}/.dotfiles/install/atom-packages
apm upgrade

puts "\n>> neovim/vim packages upgrade"
${HOME}/.config/nvim/bin/pack

echo
