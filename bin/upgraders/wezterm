#!/usr/bin/env zsh

if [ "${1}" = "-h" ] || [ "${1}" = "--help" ]; then
  echo "[wezterm] update wezterm \$TERM and completion"
  exit
fi

title "[wezterm] updating wezterm \$TERM"
tempfile=$(mktemp) \
  && curl -o $tempfile https://raw.githubusercontent.com/wez/wezterm/main/termwiz/data/wezterm.terminfo \
  && tic -x -o ~/.terminfo $tempfile \
  && rm $tempfile

title "[wezterm] updating wezterm completions"
mkdir -p "${XDG_CONFIG_HOME}/completions"
wezterm shell-completion --shell zsh > "${ZSH_CONFIG_HOME}/completions/wezterm.zsh"
