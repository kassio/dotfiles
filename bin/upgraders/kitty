#!/usr/bin/env zsh

if [ "$1" = "--help" ]; then
  echo "update kitty dependencies"
  exit
fi

title "[nvim] updating kitty theme files"
mkdir -p "${HOME}/.config/kitty/themes"

subtitle "Downloading light theme"
curl -Ls \
  --url "https://raw.githubusercontent.com/catppuccin/kitty/main/latte.conf" \
  > "${HOME}/.config/kitty/themes/light.conf"

subtitle "Downloading dark theme"
curl -Ls \
  --url "https://raw.githubusercontent.com/catppuccin/kitty/main/mocha.conf" \
  > "${HOME}/.config/kitty/themes/dark.conf"
