#!/usr/bin/env zsh

if [ "$1" = "--help" ]; then
  echo "update nvim plugins"
  exit
fi

install() {
  brew unlink "$1"
  brew install \
    --force \
    --build-from-source \
    --fetch-HEAD \
    --HEAD "$1"
  brew link --force "$1"
}

title "[nvim] reinstalling neovim"
install tree-sitter
install luajit
install neovim

title "[nvim] updating neovim plugin"
nvim -c 'UpgradeAndClose'
