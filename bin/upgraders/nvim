#!/usr/bin/env zsh

if [ "$1" = "--help" ]; then
  echo "update nvim plugins"
  exit
fi

install() {
  brew install --force --build-from-source --fetch-HEAD --HEAD "$1" 2>/dev/null
}

title "[nvim] reinstalling neovim"
install tree-sitter
install luajit
install neovim

title "[nvim] updating neovim plugin"
nvim -c 'UpgradeAndClose'
