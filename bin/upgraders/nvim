#!/usr/bin/env zsh

if [ "$1" = "--help" ]; then
  echo "update nvim plugins"
  exit
fi

title "[nvim] reinstalling neovim"

brew unlink neovim 2>/dev/null
brew install \
  --force \
  --build-from-source \
  --fetch-HEAD \
  --HEAD neovim 2>/dev/null
brew link neovim 2>/dev/null

title "[nvim] updating neovim plugin"
nvim -c 'UpgradeAndClose'
