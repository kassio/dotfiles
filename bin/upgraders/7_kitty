#!/usr/bin/env zsh

if [ "$1" = "--help" ]; then
  echo "update kitty dependencies"
  exit
fi

title "[nvim] updating kitty theme files"
for theme in latte; do
  subtitle "Downloading ${theme}"
  curl -Ls \
    --url "https://raw.githubusercontent.com/catppuccin/kitty/main/${theme}.conf" \
    > "${HOME}/.config/kitty/themes/light/${theme}.conf"
done
for theme in frappe macchiato mocha; do
  subtitle "Downloading ${theme}"
  curl -Ls \
    --url "https://raw.githubusercontent.com/catppuccin/kitty/main/${theme}.conf" \
    > "${HOME}/.config/kitty/themes/dark/${theme}.conf"
done
