#!/usr/bin/env zsh

cache="${HOME}/.cache/term_profile"
themes_path="${HOME}/.config/kitty/themes/"

case "$1" in
  dark)
    kitty @ set-colors --all --configured "${themes_path}/One Dark.conf"
    echo "dark" > "${cache}"
    ;;
  light)
    kitty @ set-colors --all --configured "${themes_path}/One Half Light.conf"
    echo "light" > "${cache}"
    ;;
esac
