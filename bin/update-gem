#!/bin/bash
# Usage: update-gem $GEM
set -e
if [ $# -lt 1 ]; then
  echo "Usage: $(basename "$0") GEMS..."
  exit 1
fi

__red() {
  echo -e "\e[31m$*\e[0m"
}

__run_tests() {
  if [ -f "bin/rspec" ]; then
    bin/rspec
  else
    bin/rails test
  fi
}

__update_dependency__() {
  echo -e "ğŸ’  \033[00mUpdating \033[0;31m$1\033[00m dependency..."
  bundle update "$1" --quiet

  if __run_tests; then
    __commit__ "$1"
  else
    __fail__ "$1"
  fi
}

__fail__() {
  __red "ğŸ’£  \033[00mthe test suite fails after 'bundle update $1' \033[0;31m"
  git checkout Gemfile.lock
  exit 1
}

__commit__() {
  git add Gemfile.lock
  git commit -m "Update \`$1\` dependency" --quiet ||
    echo -e "âš ï¸  \033[00mNothing to update\n"
}

for gem in "$@"; do
  __update_dependency__ "$gem"
done
