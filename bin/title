#!/usr/bin/env zsh

local bullet="â–¸ "
local color="74"
local msg=""

function title() {
  case "$1" in
    -c | --color)
      shift
      color="$1"
      shift
      title "$@"
      ;;
    -s | --symbol)
      shift
      bullet="$1"
      shift
      title "$@"
      ;;
    *)
      msg="$*"

      printf "%s %s\n" "$(printc -c 3 "${bullet}")" "$(printc -b -c "${color}" "${msg}")"
  esac
}

title $@
