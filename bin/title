#!/usr/bin/env zsh

function title() {
  local bullet="â–¸ "

  case $1 in
    -c | --color)
      shift
      local color=$1
      shift
      ;;
    *)
      local color="74"
      ;;
  esac

  local msg="$*"

  printf "%s %s\n" "$(printc -c 3 "${bullet}")" "$(printc -b -c "${color}" "${msg}")"
}

title $@
