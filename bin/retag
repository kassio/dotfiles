#!/usr/bin/env bash

_bundle() {
  if [ -e 'Gemfile' ]
  then
    echo 'Gemfile found, bundling first'
    bundle
  fi
}

_retag() {
  _bundle
  ctags || (rm tags && ctags)
  ctags-gems || (rm tags.gems && ctags-gems)
}

case $1 in
  -v|--verbose)
    _retag
    ;;
  *)
    exec &>/dev/null
    _retag
    ;;
esac
