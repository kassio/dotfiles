#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/inline"

gemfile do
  source "https://rubygems.org"

  gem "irb"
end

require "irb"
require "irb/completion"

def darken(hex_color, amount: 0.1)
  rgb = hex_color.gsub('#', '').scan(/../).map(&:hex)

  format(
    "#%02x%02x%02x",
    (rgb[0].to_i * amount).round,
    (rgb[1].to_i * amount).round,
    (rgb[2].to_i * amount).round
  )
end

def lighten(hex_color, amount: 0.1)
  rgb = hex_color.gsub('#', '').scan(/../).map(&:hex)

  format(
    "#%02x%02x%02x",
    [(rgb[0].to_i + (255 * amount)).round, 255].min,
    [(rgb[1].to_i + (255 * amount)).round, 255].min,
    [(rgb[2].to_i + (255 * amount)).round, 255].min
  )
end

IRB.start
