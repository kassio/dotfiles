#!/usr/bin/env bash

__update_all() {
  local locked=""
  local updated=""
  local not_updated=""

  for __line__ in $(bundle outdated | egrep "\* ")
  do
    __dependency__=$(echo $__line__ | awk '{ print $2 }')
    case $__line__ in
      *requested*)
        locked+="$__dependency__\n"
        ;;
      *)
        DISABLE_SPRING=1 update-gem $__dependency__

        if [ $? -eq 0 ]
        then
          updated+="$__dependency__\n"
        else
          git checkout Gemfile*
          not_updated+="$__dependency__\n"
        fi
        ;;
    esac
  done

  if [ "$locked" != "" ]
  then
    echo "üîí Gems locked on Gemfile:"
    echo -e $locked
  fi

  [ "$locked" != "" -a "$updated" != "" ] &&  echo "------------------------------"

  if [ "$updated" != "" ]
  then
    echo "‚úÖ  Updated:"
    echo -e $updated
  fi

  [ "$locked" != "" -o "$updated" != "" ] &&  echo "------------------------------"

  if [ "$not_updated" != "" ]
  then
    echo "‚ùé  Not Updated:"
    echo -e $not_updated
  fi
}

old_IFS=$IFS
IFS=$'\n'
__update_all
IFS=$old_IFS
