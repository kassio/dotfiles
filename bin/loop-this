#!/usr/bin/env bash

function show_help {
  echo -e "usage: loop-this [-h|--help] <number> <command>
  number          number of times that the command will be executed
  command         the command that will be executed
  -h, --help      show this help message


  By default the loop will stop when the <command> fails,
  if you want to change this behaviour you can use
    the \$DONT_STOP env variable

    Example:

    # will execute the ls command 5 times.
    loop-this 5 ls
    # will execute the rspec 10 times, even if the command return something
    # different from 0.
    DONT_STOP=1 loop-this 10 rspec"
}

if [ $# -eq 0 ] || [ "$1" == "-h" ] || [ "$1" == "--help" ]
then
  show_help
  exit 0
fi

size=$1
shift
cmd="$@"
build_count=0
error_count=0

cmd=$(echo $cmd | sed "s/'/'\\''/g")

report() {
  echo -e "\nkilled: << Build $build_count (failed: $error_count) >>\n"
  exit $error_count
}; trap report SIGINT SIGTERM

while [ $build_count -lt $size ]
do
  echo ">> Build $((++build_count)) (failed: $error_count)"
  echo ">> $cmd"
  $cmd
  if [[ $? != 0 ]]
  then
    error_count=$(($error_count + 1))
    if [[ "$DONT_STOP" = "" ]]
    then
      break
    fi
  fi
  echo ""
done

echo -e "\nBuilds: $build_count (failed: $error_count)\n"
exit $error_count
