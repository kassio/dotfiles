#!/usr/bin/env bash

function install_or_update_gem() {
  if [ "$(gem search -i $1)" == "false" ]
  then
    echo "Installing $1"
    for_all_rubies gem install $1 --quiet
  else
    echo "Updating $1"
    for_all_rubies gem update $1 --quiet
  fi
}

all_rubies_do gem update --system
install_or_update_gem scss_lint
install_or_update_gem rubocop
install_or_update_gem pre-commit

npm install -g eslint
