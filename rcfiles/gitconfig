[user]
  name = Kassio Borges
[credential]
  helper = osxkeychain
[core]
  excludesfile = ~/.gitignore
  hooksPath = ~/.dotfiles/lib/git-hooks
  editor = `which $EDITOR`
  whitespace = trailing-space,space-before-tab,cr-at-eol
[push]
  default = current
[pull]
  rebase = true
[grep]
  extendRegexp = true
  lineNumber = true
[help]
  autocorrect = 1
[color]
  branch = true
  diff = auto
  interactive = auto
  status = auto
  grep = auto
  ui = auto
[color "diff"]
  old = red dim
  new = green bold
[merge]
  ff = false
[alias]
  work = !git config --local --replace-all user.name "Kassio\\ Borges" && git config --local user.email "kborges@zendesk.com"
  home = !git config --local --replace-all user.name "Kassio\\ Borges" && git config --local user.email "kassioborgesm@gmail.com"
  b = branch
  c = commit -v
  ca = commit -v --amend
  co = checkout
  cp = cherry-pick
  d = !git --no-pager diff
  dp = diff
  f = fetch
  fix = commit --amend --no-edit
  l = !git --no-pager lp -20
  lme = !GIT_USERNAME="$(git config user.name)" && git --no-pager lp --author="\"$GIT_USERNAME\""
  lpme = !GIT_USERNAME="$(git config user.name)" && git lp --author="\"$GIT_USERNAME\""
  lp = log --pretty=format:'%C(red dim)%h%Creset %C(yellow dim)%an%C(green) %cd%C(reset)%C(white) %s%Creset -%C(blue dim)%d%Creset'
  m = merge
  p = pull
  ps = push
  r = rebase
  s = status -sb
  t = tag
  tl = !git tag --list --sort='-authordate' --format '%(color:green dim)%(authordate:local)%(color:reset) %(color:yellow dim)%(authorname)%(color:reset) %(refname:lstrip=2)' | head -n 30 | tail -r
  today = !git --no-pager l --since=today.midnight
  tree = !git lp --graph
  last-tag = !git describe --tags $(git rev-list --tags --max-count=1)
  show-last-tag = !git show $(git last-tag)
  rank = shortlog -sn
[tag]
  sort = creatordate
[rerere]
  enabled = true
[log]
  date = format-local:"%F %R"
